<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>BotWeb</display-name>
	
	<listener>
		<listener-class>com.teamchat.client.utils.TeamchatContextListener
		</listener-class>
	</listener>
	<context-param>
		<param-name>bot-email</param-name>
		<param-value>bot-chatletcreator@teamchatbot.com</param-value>
	</context-param>
	<context-param>
		<param-name>bot-password</param-name>
		<param-value>password@123</param-value>
	</context-param>
	<context-param>
		<param-name>bot-class</param-name>
		<param-value>chatletcreator.PrintChatlet</param-value>
	</context-param>
	<context-param>
		<param-name>db-host</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>db-name</param-name>
		<param-value>Bot</param-value>
	</context-param>
	<context-param>
		<param-name>db-user</param-name>
		<param-value>webaroo</param-value>
	</context-param>
	<context-param>
		<param-name>db-password</param-name>
		<param-value>webar00</param-value>
	</context-param>
	<context-param>
		<param-name>threading</param-name>
		<param-value>SINGLE</param-value>
	</context-param>
</web-app>