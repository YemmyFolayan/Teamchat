<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BotWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.teamchat.client.utils.TeamchatContextListener</listener-class>
  </listener>
  <context-param>
    <param-name>bot-email</param-name>
    <param-value>************</param-value>
  </context-param>
  <context-param>
    <param-name>bot-password</param-name>
    <param-value>****************</param-value>
  </context-param>
  <context-param>
    <param-name>bot-class</param-name>
    <param-value>com.teamchat.integrations.trello.TrelloBot</param-value>
  </context-param>
  <context-param>
    <param-name>db-host</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>db-name</param-name>
    <param-value>Bot</param-value>
  </context-param>
  <context-param>
    <param-name>db-user</param-name>
    <param-value>tcinterns</param-value>
  </context-param>
  <context-param>
    <param-name>db-password</param-name>
    <param-value>*************</param-value>
  </context-param>
  <servlet>
    <servlet-name>TrelloServlet</servlet-name>
    <servlet-class>com.teamchat.integrations.trello.TrelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TrelloServlet</servlet-name>
    <url-pattern>/TrelloServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CallbackServlet</servlet-name>
    <servlet-class>com.teamchat.integrations.trello.CallbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CallbackServlet</servlet-name>
    <url-pattern>/CallbackServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>WebhookServlet</servlet-name>
    <servlet-class>com.teamchat.integrations.trello.WebhookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebhookServlet</servlet-name>
    <url-pattern>/WebhookServlet</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>threading</param-name>
    <param-value>SINGLE</param-value>
  </context-param>
</web-app>
